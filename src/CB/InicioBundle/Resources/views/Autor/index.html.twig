{% extends 'InicioBundle:Admin:index.html.twig' %} 
{% block form %}
     <a href="{{ path('autor_new') }}">
            <div class="btn btn-primary dropdown-toggle margin-top1">
                <span class="glyphicon glyphicon-plus"></span>
                Crear Nuevo Autor
            </div>
        </a>
    <h1>Lista de Autores</h1>

    <div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('autor_show', { 'id': entity.id }) }}">{{ entity.nombre }}</a></td>
                <td>
                    <a href="" title="Borrar" class="esp" data-toggle="modal" data-target="#myModal">
                        <span class="glyphicon glyphicon-trash margin-der1" style="color: rgb(156, 0, 0);"></span>
                    </a>
                    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                          <div class="modal-content">
                            <div class="modal-header">
                              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                              <h4 class="modal-title" id="myModalLabel">Eliminar Autor</h4>
                            </div>
                            <div class="modal-body">
                              Desea eliminar el autor?
                            </div>
                            <div class="modal-footer">
                              <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                              <a href="{{path('removeAutor', { 'id': entity.id })}}" ><button type="submit" class="btn btn-primary">{{ entity.id }}</button></a>
                            </div>
                          </div>
                        </div>
                    </div>

                    <a href="{{ path('autor_edit', { 'id': entity.id }) }}" class="esp">
                        <span class="glyphicon glyphicon-pencil margin-der1" title="Editar"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}