{% extends 'InicioBundle:Admin:index.html.twig' %} 

{% block form %}
    {{ form_start(form) }}
     <div class="overflow margin-top1">
            {% if error %}
                <div id="login-error" class="alert alert-danger col-md-6 col-md-offset-3">El autor ya exíste</div>
            {% endif %}
            <div class="panel panel-primary col-md-6 col-md-offset-3">
                <div class="panel-heading"><span class="glyphicon glyphicon-plus">Agregar un Autor</span>
                </div>
                {{ form_widget(form._token) }}
                <div class="panel-body form-group distancia">
                    <label>Nombre del nuevo Autor</label>
                    <div class="margin-top1">
                        {{ form_widget(form.nombre, {'attr': {'class': 'form-control', 'placeholder': 'Autor', 'pattern':'^[A-Za-z ñÑ]{1,32}$'}}) }}
                    </div>
                    <div class="margin-top1">
                        {{ form_widget(form.submit, {'label': 'Cargar', 'attr': {'class': 'btn btn-primary dropdown-toggle pull-left'}}) }}
                    
                    </div>
                    <a href="{{ path('autor') }}">
                        <div class="btn btn-primary dropdown-toggle esp">
                            <span class="glyphicon glyphicon-share-alt"></span>
                            Volver a la lista
                        </div>
                    </a>
                </div>
            </div>
    </div>
    {{ form_end(form) }}

        

{% endblock %}
