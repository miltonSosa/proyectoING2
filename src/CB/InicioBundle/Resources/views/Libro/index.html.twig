{% block body -%}
    <h1>Libro list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Imagen</th>
                <th>Descripcion</th>
                <th>Anio</th>
                <th>Idioma</th>
                <th>Precio</th>
                <th>Borrado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('libro_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.imagen }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.anio }}</td>
                <td>{{ entity.idioma }}</td>
                <td>{{ entity.precio }}</td>
                <td>{{ entity.borrado }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('libro_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('libro_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('libro_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
